{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020"],
    "sourceMap": false,
    "outDir": "./build",
    "rootDir": ".",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}